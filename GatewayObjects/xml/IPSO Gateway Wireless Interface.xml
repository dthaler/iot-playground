<?xml version="1.0" encoding="utf-8"?>
<LWM2M>
    <Object ObjectType="MODefinition">
        <Name>IPSO Gateway Wireless Interface</Name>
        <Description1>This IPSO Object is used to represent some settings for the wireless interface.</Description1>
        <ObjectID>X</ObjectID>
        <ObjectURN>urn:oma:lwm2m:ext:X</ObjectURN>
        <MultipleInstances>Multiple</MultipleInstances>
        <Mandatory>Optional</Mandatory>
        <Resources>
            <Item ID="0">
                <Name>Name</Name>
                <Operations>RW</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Mandatory>Mandatory</Mandatory>
                <Type>String</Type>
                <RangeEnumeration></RangeEnumeration>
                <Units></Units>
                <Description>This resource type returns the name of the wireless interface in human-readable form (e.g. wlan0).</Description>
            </Item> 
            <Item ID="1">
                <Name>Enabled</Name>
                <Operations>RW</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Mandatory>Mandatory</Mandatory>
                <Type>Boolean</Type>
                <RangeEnumeration></RangeEnumeration>
                <Units></Units>
                <Description>This resource type returns wether the interface is enabled or disabled. When set to 1, wireless interface is enabled.</Description>
            </Item>    
            <Item ID="2">
                <Name>Mode</Name>
                <Operations>RW</Operations>
                <MultipleInstances>Multiple</MultipleInstances>
                <Mandatory>Mandatory</Mandatory>
                <Type>Int</Type>
                <RangeEnumeration></RangeEnumeration>
                <Units></Units>
                <Description>This resource type returns the mode of the wireless interface. Existing values are 0: Access Point, 1: Client, 2: Ad-Hoc, 3: Static WDS, 4: Monitor, 5: Mesh.</Description> </Item>
            <Item ID="3">
                <Name>Mac Address</Name>
                <Operations>RW</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Mandatory>Mandatory</Mandatory>
                <Type>String</Type>
                <RangeEnumeration></RangeEnumeration>
                <Units></Units>
                <Description>This resource type returns the MAC address of the wireless interface.</Description>
            </Item>      
            <Item ID="4">
                <Name>IP Addresses</Name>
                <Operations>RW</Operations>
                <MultipleInstances>Multiple</MultipleInstances>
                <Mandatory>Mandatory</Mandatory>
                <Type>String</Type>
                <RangeEnumeration></RangeEnumeration>
                <Units></Units>
                <Description>This resource type returns an array of IP addresses.</Description>
            </Item>  
            <Item ID="5">
                <Name>Transmit Power Level</Name>
                <Operations>RW</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Mandatory>Mandatory</Mandatory>
                <Type>Int</Type>
                <RangeEnumeration></RangeEnumeration>
                <Units>dBm</Units>
                <Description>This resource type returns the transmission power.</Description>
            </Item>  
            <Item ID="6">
                <Name>Receive Power Level</Name>
                <Operations>RW</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Mandatory>Mandatory</Mandatory>
                <Type>Int</Type>
                <RangeEnumeration></RangeEnumeration>
                <Units>dBm</Units>
                <Description>This resource type rreturns the receiving power.</Description>
            </Item>  
        </Resources>
        <Description2></Description2>
    </Object>
</LWM2M>